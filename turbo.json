{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "target/**"]
    },
    "build:typescript": {},
    "check": {
      "dependsOn": ["^build", "^build:typescript"]
    },
    "fmt": {},
    "lint": {
      "dependsOn": ["^build"]
    },
    "serve": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["@repo/server#serve"],
      "dependsOn": ["@repo/server#build:typescript"]
    }
  }
}
