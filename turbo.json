{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "target/**"]
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "fmt": {},
    "lint": {
      "dependsOn": ["^build"]
    },
    "serve": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "with": ["@repo/server#serve"],
      "cache": false,
      "persistent": true
    }
  }
}

